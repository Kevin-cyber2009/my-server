<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hệ Thống Ghi Nhận Vi Phạm"
        android:textColor="#ECEFF1"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView cho chọn trường và thông tin người trực -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/input_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#263238"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="#ECEFF1"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn trường"
                android:textColor="#ECEFF1"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/school_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#ECEFF1"
                app:hintTextColor="#ECEFF1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên người trực"
                    android:textColor="#ECEFF1"
                    android:textColorHint="#80ECEFF1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#ECEFF1"
                app:hintTextColor="#ECEFF1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/class_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lớp người trực"
                    android:textColor="#ECEFF1"
                    android:textColorHint="#80ECEFF1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Quét QR"
                android:textColor="#ECEFF1"
                app:backgroundTint="#1976D2"
                app:cornerRadius="10dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manual_input_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nhập tay thông tin học sinh"
                android:textColor="#ECEFF1"
                app:backgroundTint="#1976D2"
                app:cornerRadius="10dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CardView cho thông tin học sinh và chọn lỗi -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/violation_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#263238"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="#ECEFF1"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/input_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/student_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin học sinh: Chưa quét QR"
                android:textColor="#ECEFF1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Chọn nội quy vi phạm"
                android:textColor="#ECEFF1"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/violation_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Xác nhận vi phạm"
                android:textColor="#ECEFF1"
                app:backgroundTint="#1976D2"
                app:cornerRadius="10dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CardView cho nhập tay thông tin học sinh, bọc trong ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/input_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/manual_input_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="#263238"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="#ECEFF1"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#ECEFF1"
                    app:hintTextColor="#ECEFF1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manual_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Họ và tên học sinh"
                        android:textColor="#ECEFF1"
                        android:textColorHint="#80ECEFF1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#ECEFF1"
                    app:hintTextColor="#ECEFF1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manual_class_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lớp học sinh"
                        android:textColor="#ECEFF1"
                        android:textColorHint="#80ECEFF1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#ECEFF1"
                    app:hintTextColor="#ECEFF1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manual_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ngày tháng năm sinh (YYYY-MM-DD)"
                        android:textColor="#ECEFF1"
                        android:textColorHint="#80ECEFF1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#ECEFF1"
                    app:hintTextColor="#ECEFF1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manual_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Giới tính (Nam/Nữ)"
                        android:textColor="#ECEFF1"
                        android:textColorHint="#80ECEFF1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manual_confirm_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Xác nhận nhập tay"
                    android:textColor="#ECEFF1"
                    app:backgroundTint="#1976D2"
                    app:cornerRadius="10dp"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>